{
    "settings": {
        "index": {
            "max_result_window": 100000,
            "mapping": {
                "total_fields": {
                    "limit": 100000
                }
            },
            "number_of_shards": 6,
            "number_of_replicas": 1
        },
        "index.query.default_field": "_all",
        "analysis": {
            "char_filter": {
                "hyphen_mapping": {
                    "type": "mapping",
                    "mappings": [
                        "-=>"
                    ]
                },
                "non_numeric_remover": {
                    "type": "pattern_replace",
                    "pattern": "[^0-9]+",
                    "replacement": " "
                },
                "apostrophe_and_okina_remover": {
                    "type": "mapping",
                    "mappings": [
                        "\u2018=>",
                        "\uFF07=>",
                        "\u02B9=>",
                        "\u02BB=>",
                        "\u02BC=>",
                        "\u02BD=>",
                        "\u02BE=>",
                        "\u02BF=>"
                    ]
                }
            },
            "analyzer": {
                "completer": {
                    "filter": "custom_edge_ngram",
                    "tokenizer": "lowercase",
                    "type": "custom"
                },
                "softmatcher": {
                    "type": "custom",
                    "char_filter": ["apostrophe_and_okina_remover"],
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "elision_case_insensitive",
                        "apostrophe_remover",
                        "ascii_folder",
                        "swedish_snowball"
                    ]
                },
                "isbn_analyzer": {
                    "tokenizer": "standard",
                    "char_filter": [
                        "hyphen_mapping"
                    ],
                    "filter": [
                        "lowercase"
                    ]
                },
                "numeric_extractor": {
                    "filter": [
                        "numeric_keeper"
                    ],
                    "tokenizer": "numeric_keeper_tokenizer"
                }
            },
            "tokenizer": {
                "numeric_keeper_tokenizer": {
                    "type": "pattern",
                    "group": 1,
                    "pattern": "([0-9]{4})"
                }
            },
            "filter": {
                "custom_edge_ngram": {
                    "max_gram": 50,
                    "min_gram": 2,
                    "type": "edge_ngram"
                },
                "numeric_keeper": {
                    "type": "pattern_capture",
                    "preserve_original": false,
                    "patterns": [
                        "([0-9]{4})"
                    ]
                },
                "swe_light_stemmer": {
                    "name": "light_swedish",
                    "type": "stemmer"
                },
                "swedish_snowball": {
                    "type": "snowball",
                    "language": "Swedish"
                },
                "ascii_folder": {
                    "type": "asciifolding",
                    "preserve_original": true
                },
                "elision_case_insensitive": {
                    "type": "elision",
                    "articles": [
                        "b", "c", "d", "j", "l", "m", "n", "s", "t", "v",
                        "qu", "jusqu", "quoiqu", "lorsqu", "puisqu",
                        "all", "dall", "dell", "nell", "sull", "coll", "pell",
                        "gl", "agl", "dagl", "degl", "negl", "sugl", "un"
                    ],
                    "articles_case": true
                },
                "apostrophe_remover": {
                    "type": "pattern_replace",
                    "pattern": "[\u0027|\u2019]",
                    "replacement": ""
                }
            }
        }
    },
    "mappings": {
        "_source": {
            "enabled": true
        },
        "properties": {
            "index": {
                "type": "object",
                "enabled": false
            },
            "meta": {
                "properties": {
                    "created": {
                      "type": "date",
                      "copy_to": "_all"
                    },
                    "modified": {
                      "type": "date",
                      "copy_to": "_all"
                    },
                    "generationDate": {
                      "type": "date",
                      "copy_to": "_all"
                    },
                    "encodingLevel": {
                      "type": "keyword",
                      "copy_to": "_all"
                    },
                    "recordStatus": {
                      "type": "keyword",
                      "copy_to": "_all"
                    }
                }
            },
            "issuanceType": {
              "type": "keyword",
              "copy_to": "_all"
            },
            "identifiedBy": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "@type": {"type": "keyword"},
                    "value": {
                        "type": "text",
                        "analyzer": "isbn_analyzer",
                        "copy_to": "_all"
                    }
                }
            },
            "publication": {
                "properties": {
                    "year": {
                        "fields": {
                            "keyword": {
                                "index": true,
                                "type": "keyword"
                            }
                        },
                        "analyzer": "numeric_extractor",
                        "index": true,
                        "type": "text",
                        "fielddata": true,
                        "copy_to": "_all"
                    },
                    "startYear": {
                        "fields": {
                            "keyword": {
                                "index": true,
                                "type": "keyword"
                            }
                        },
                        "analyzer": "numeric_extractor",
                        "index": true,
                        "type": "text",
                        "fielddata": true,
                        "copy_to": "_all"
                    },
                    "endYear": {
                        "fields": {
                            "keyword": {
                                "index": true,
                                "type": "keyword"
                            }
                        },
                        "analyzer": "numeric_extractor",
                        "index": true,
                        "type": "text",
                        "fielddata": true,
                        "copy_to": "_all"
                    }
                }
            },
            "hasTitle": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "@type": {"type": "keyword"},
                    "mainTitle": {
                        "type": "text",
                        "analyzer": "softmatcher",
                        "copy_to": "_all",
                        "fields": {
                            "keyword": {
                                "type": "keyword"
                            },
                            "sort": {
                                "type": "icu_collation_keyword",
                                "index": false,
                                "language": "sv"
                            }
                        }
                    }
                }
            },
            "prefLabel": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword"
                    },
                    "sort": {
                        "type": "icu_collation_keyword",
                        "index": false,
                        "language": "sv"
                    }
                },
                "copy_to": "_all"
            },
            "_links": {
                "type": "keyword",
                "copy_to": "_all"
            },
            "_outerEmbellishments": {
                "type": "keyword",
                "copy_to": "_all"
            },
            "_collection": {
                "type": "keyword",
                "copy_to": "_all"
            },
            "_all": {
                "type": "text",
                "store": false,
                "analyzer": "softmatcher"
            }
        },
        "date_detection": false,
        "dynamic_templates": [
            {
                "context_template": {
                    "mapping": {
                        "type": "object",
                        "enabled": false
                    },
                    "match": "@context"
                }
            },
            {
                "id_template": {
                    "mapping": {
                        "index": true,
                        "type": "keyword",
                        "copy_to": "_all"
                    },
                    "match": "@id",
                    "match_mapping_type": "string"
                }
            },
            {
                "type_template": {
                    "mapping": {
                        "index": true,
                        "type": "keyword",
                        "copy_to": "_all"
                    },
                    "match": "@type",
                    "match_mapping_type": "string"
                }
            },
            {
                "shelfControlNumber_template": {
                    "match": "shelfControlNumber",
                    "mapping": {
                        "index": true,
                        "type": "text",
                        "copy_to": "_all"
                    }
                }
            },
            {
                "unknown_template": {
                    "path_match": "_marc*.*.subfields.*",
                    "mapping": {
                        "type": "keyword",
                        "index": "true",
                        "copy_to": "_all"
                    },
                    "match_mapping_type": "string"
                }
            },
            {
                "soft_template": {
                    "mapping": {
                        "fields": {
                          "exact": {
                            "type": "text",
                            "analyzer": "standard"
                          }
                        },
                        "analyzer": "softmatcher",
                        "type": "text",
                        "index": true,
                        "copy_to": "_all"
                    },
                    "match": "_str",
                    "match_mapping_type": "string"
                }
            },
            {
                "catchall_template": {
                    "match_mapping_type": "string",
                    "mapping": {
                        "copy_to": "_all"
                    }
                }
            }
        ]
    }
}
